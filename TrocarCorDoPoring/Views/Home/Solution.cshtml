@model List<PuzzleStep>
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Solução</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 20px;
        }

        ol {
            max-width: 300px;
        }
    </style>
</head>
<body>
    <h2>Passo a passo para deixar todas as bolinhas rosas</h2>
    <ol>
        @foreach (var step in Model)
        {
            <li>Linha @step.Linha, Coluna @step.Coluna</li>
        }
    </ol>
    <a href="@Url.Action("Index")">Nova resolução</a>
</body>
</html>
